{
  "name": "hk-top-news",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/styles": "^4.11.4",
    "axios": "^0.21.1",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-app-polyfill": "^2.0.0",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.0.1",
    "react-scripts": "^4.0.3",
    "redux": "^4.1.1",
    "redux-thunk": "^2.3.0",
    "replace": "^1.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@craco/craco": "^6.2.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.1",
    "craco-alias": "^3.0.1",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "react-test-renderer": "^17.0.2",
    "redux-devtools-extension": "^2.13.9",
    "redux-mock-store": "^1.5.4",
    "workbox-build": "^4.3.1"
  },
  "scripts": {
    "start": "craco start",
    "build": "GENERATE_SOURCEMAP=false craco build && npm run build-sw",
    "prepare": "husky install",
    "postbuild": "node scripts/postBuild.js",
    "test": "craco test --verbose --watchAll --coverage",
    "test:ci": "craco test --watchAll=false --ci --runInBand --coverage",
    "eject": "react-scripts eject",
    "build-sw": "node ./src/sw-build.js"
  },
  "jest": {
    "resetMocks": false,
    "globalSetup": "<rootDir>/jest.setup.global.js",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/(routes|styles|containers|pages|services)/",
      "<rootDir>/src/(App|serviceWorker|index|sw-build|sw-template)\\.(js|jsx)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@components(.*)$": "<rootDir>/src/components/$1",
      "^@containers(.*)$": "<rootDir>/src/containers/$1",
      "^@hooks(.*)$": "<rootDir>/src/hooks/$1",
      "^@images(.*)$": "<rootDir>/src/images/$1",
      "^@pages(.*)$": "<rootDir>/src/pages/$1",
      "^@routes(.*)$": "<rootDir>/src/routes/$1",
      "^@services(.*)$": "<rootDir>/src/services/$1",
      "^@store(.*)$": "<rootDir>/src/store/$1",
      "^@styles(.*)$": "<rootDir>/src/styles/$1",
      "^@utils(.*)$": "<rootDir>/src/utils/$1"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not ie <= 9",
      "not op_mini all",
      "ie 10",
      "ie 11"
    ],
    "development": [
      ">0.2%",
      "not dead",
      "not ie <= 9",
      "not op_mini all",
      "ie 10",
      "ie 11"
    ]
  }
}
